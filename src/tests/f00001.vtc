varnishtest "Check vcl.discard with a querystring filter"

varnish v1 -vcl {
	import querystring;

	backend be { .host = "${bad_ip}"; .port = "9080"; }

	sub vcl_init {
		new noop = querystring.filter();
		noop.add_string("_");
		noop.add_glob("utm_*");
		noop.add_regex("^sess[a-z0-9]+$");
	}
} -start

varnish v1 -vcl {
	backend be { .host = "${bad_ip}"; .port = "9080"; }
}

varnish v1 -cliok "vcl.discard vcl1"
varnish v1 -expect n_vcl == 1
