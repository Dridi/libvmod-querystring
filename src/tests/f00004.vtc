varnishtest "Sort parameters in query-strings"

server s1 "" -start

varnish v1 -vcl+backend {
	import querystring;

	sub vcl_recv {
		return (synth(200));
	}

	sub vcl_synth {
		set resp.http.Sorted-URL = querystring.sort(req.url);
	}
} -start

client c1 {
	txreq -url "/?b&a"
	rxresp
	expect resp.http.Sorted-URL == "/?a&b"

	txreq -url "/?a&b"
	rxresp
	expect resp.http.Sorted-URL == "/?a&b"

	txreq -url "/?b&a&"
	rxresp
	expect resp.http.Sorted-URL == "/?a&b"

	txreq -url "/?&b&a"
	rxresp
	expect resp.http.Sorted-URL == "/?a&b"

	txreq -url "/?b&&a"
	rxresp
	expect resp.http.Sorted-URL == "/?a&b"

	txreq -url "/?a&b&a"
	rxresp
	expect resp.http.Sorted-URL == "/?a&a&b"

	txreq -url "/?b&a&ba"
	rxresp
	expect resp.http.Sorted-URL == "/?a&b&ba"
} -run
