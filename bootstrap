#!/bin/sh
#
# Written by Dridi Boukelmoune <dridi.boukelmoune@gmail.com>
#
# This file is in the public domain.

set -e
set -u

ROOT_DIR="$(dirname "$0")"

test -n "$ROOT_DIR"

autoreconf -i "$ROOT_DIR"

"$ROOT_DIR"/configure \
	--enable-silent-rules \
	--enable-warnings \
	--enable-docs \
	"$@" \
	QS_VARNISH_VERSION=6.0.0
